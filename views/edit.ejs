<%- include header %>
<form method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
	<div class="form-group">
		<label for="title" class="col-sm-2 control-label">标题：</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="title" name="title" placeholder="请输入标题" value="<%= post.title %>" disabled="disabled" />
		</div>
	</div>
	<div class="form-group">
		<label for="label1" class="col-sm-2 control-label">标签：</label>
		<div class="col-sm-10 row-fluid">
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label1" name="label1" placeholder="标签一" value="<%= post.tags[0]%>" disabled="disabled" />
			</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label2" name="label2" placeholder="标签二" value="<%= post.tags[1]%>" disabled="disabled" />
			</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label3" name="label3" placeholder="标签三" value="<%= post.tags[2]%>" disabled="disabled" />
			</div>
		</div>
	</div>
	<div class="form-group">
		<label for="post" class="col-sm-2 control-label">正文：</label>
		<div class="col-sm-10">
			<textarea class="form-control" name="post" id="kindeditor" placeholder="请输入正文" rows="20"><%= post.post %></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<input type="file" name="image" />
		</div>
	</div>
	<div class="form-group">
    	<div class="col-sm-offset-2 col-sm-10">
      		<button type="submit" class="btn btn-info">提交</button>
    	</div>
    </div>
</form>
<%- include footer %>