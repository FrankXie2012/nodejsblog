<%- include header %>
<h2 class="header text-center">Create Post</h2>
<form method="post" class="form-horizontal post-form" role="form" enctype="multipart/form-data">
	<div class="form-group">
		<label for="title" class="col-sm-1 control-label">标题：</label>
		<div class="col-sm-11">
			<input type="text" class="form-control validate" id="title" name="title" placeholder="请输入标题" data-warning="标题不能为空！" data-placeholder="请输入标题" />
		</div>
	</div>
	<div class="form-group">
		<label for="label1" class="col-sm-1 control-label">标签：</label>
		<div class="col-sm-11 row-fluid">
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label1" name="tag1" placeholder="标签一" />
			</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label2" name="tag2" placeholder="标签二" />
			</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label3" name="tag3" placeholder="标签三" />
			</div>
		</div>
	</div>
	<div class="form-group">
		<label for="post" class="col-sm-1 control-label">正文：</label>
		<div class="col-sm-11">
			<textarea class="form-control" id="kindeditor" name="post" placeholder="请输入正文" rows="20"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-11">
			<input type="file" name="image" />
		</div>
	</div>
	<div class="form-group">
    	<div class="col-sm-12">
      		<button type="submit" class="btn btn-primary disabled validate" disabled="disabled"><span class="glyphicon glyphicon-send"></span>&nbsp;提交</button>
    	</div>
    </div>
</form>
<%- include footer %>