<%- include header %>
<h2 class="f40px fontWhite">Create Post</h2>
<form method="post" class="form-horizontal post-form" role="form" enctype="multipart/form-data">
	<div class="form-group">
		<div class="col-sm-12">
			<input type="text" class="form-control validate" id="title" name="title" placeholder="TITLE" data-warning="标题不能为空！" data-placeholder="TITLE" />
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12 row-fluid">
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label1" name="tag1" placeholder="TAG1" />
			</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label2" name="tag2" placeholder="TAG2" />
			</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" id="label3" name="tag3" placeholder="TAG3" />
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<textarea class="form-control" id="kindeditor" name="post" placeholder="请输入正文" rows="20"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label class="label label-primary">上传图片：</label>
			<input type="file" name="image" />
		</div>
	</div>
	<div class="form-group">
    	<div class="col-sm-12">
      		<button type="submit" class="btn btn-primary disabled validate" disabled="disabled"><span class="glyphicon glyphicon-send"></span>&nbsp;提交</button>
    	</div>
    </div>
</form>
<%- include footer %>